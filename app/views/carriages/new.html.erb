<%= form_for [@train, @carriage] do |f| %>
  
  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :top_seats %>
    <%= f.text_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats %>
    <%= f.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats %>
    <%= f.text_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats %>
    <%= f.text_field :side_bottom_seats %>
  </div>

  <div class="actions">
    <%= f.submit "Создать" %>
  </div>
<% end %>
